- var linkItems = ['facebook', 'twitter', 'google-plus-g', 'linkedin-in']
- var linkUrls = ['facebook.com', 'twitter.com', 'google.com', 'linkedin']

footer.footer   
    .footer__top
        .container
            .footer__title Get in touch
            .footer__links
                each item, key in linkItems
                    a.footer__social(href="http://" + linkUrls[key] target="_blank")
                        i(class='fab fa-' + item aria-hidden="true")
                            span.visually-hidden=linkItems
            .footer__text Subscribe to our newsletter to stay update with what is new
            form(action="#" method="post")
                .footer__field: input.footer__input(type="email" placeholder="Email Adress")
                button(type="submit").button Subscribe
    .footer__bottom
